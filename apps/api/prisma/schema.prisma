generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum RowStatus {
  idle
  queued
  running
  done
  failed
  ambiguous
}

model Table {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  columns     Column[]
  rows        Row[]

  @@map("tables")
}

model Column {
  id        String   @id @default(uuid())
  tableId   String
  key       String   // stable identifier, e.g. "company_name"
  label     String   // display name, e.g. "Company Name"
  dataType  String   @default("text") // text, number, boolean, url, json
  order     Int      @default(0)
  config    Json?    // UI hints, validation rules, select options
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  table     Table    @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@unique([tableId, key])
  @@map("columns")
}

model Row {
  id         String     @id @default(uuid())
  tableId    String
  data       Json       // original + enriched data (keyed by column key)
  
  // Enrichment lifecycle tracking
  status     RowStatus  @default(idle)
  confidence Float?     // 0.0 â€“ 1.0, overall confidence of enrichment
  error      String?    // error message if failed
  lastRunAt  DateTime?  // last enrichment attempt
  
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  table      Table      @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@map("rows")
}
