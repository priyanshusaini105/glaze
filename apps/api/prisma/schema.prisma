generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum RowStatus {
  idle
  queued
  running
  done
  failed
  ambiguous
}

// Status for individual cell enrichment tasks
enum CellTaskStatus {
  queued
  running
  done
  failed
}

// Status for batch enrichment jobs
enum JobStatus {
  pending
  running
  completed
  failed
  cancelled
}

model Table {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  columns     Column[]
  rows        Row[]
  
  // Relations for enrichment
  enrichmentJobs      EnrichmentJob[]
  cellEnrichmentTasks CellEnrichmentTask[]

  @@map("tables")
}

model Column {
  id        String   @id @default(uuid())
  tableId   String
  key       String   // stable identifier, e.g. "company_name"
  label     String   // display name, e.g. "Company Name"
  dataType  String   @default("text") // text, number, boolean, url, json
  order     Int      @default(0)
  config    Json?    // UI hints, validation rules, select options
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  table     Table    @relation(fields: [tableId], references: [id], onDelete: Cascade)
  
  // Relations for enrichment
  cellEnrichmentTasks CellEnrichmentTask[]

  @@unique([tableId, key])
  @@map("columns")
}

model Row {
  id         String     @id @default(uuid())
  tableId    String
  data       Json       // original + enriched data (keyed by column key)
  
  // Enrichment lifecycle tracking
  status     RowStatus  @default(idle)
  confidence Float?     // 0.0 – 1.0, overall confidence of enrichment
  error      String?    // error message if failed
  lastRunAt  DateTime?  // last enrichment attempt
  
  // OPTIMIZATION: Incremental aggregation counters (O(1) status calculation)
  // These replace the need to findMany all tasks and recompute status on every cell
  totalTasks    Int       @default(0)  // total number of cell tasks for this row
  doneTasks     Int       @default(0)  // completed successfully
  failedTasks   Int       @default(0)  // failed permanently
  runningTasks  Int       @default(0)  // currently executing
  confidenceSum Float     @default(0)  // sum of all task confidences (average = sum / doneTasks)
  
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  table      Table      @relation(fields: [tableId], references: [id], onDelete: Cascade)
  
  // Relations for enrichment
  cellEnrichmentTasks CellEnrichmentTask[]

  // CRITICAL: Index on tableId for foreign key lookups and filtering
  @@index([tableId])
  // Composite index for common query pattern (filter by table + order by creation)
  @@index([tableId, createdAt])
  // Index for status-based queries
  @@index([status])
  @@map("rows")
}

// ============================================================
// ENRICHMENT MODELS
// ============================================================

/**
 * EnrichmentJob - Tracks a batch enrichment request
 * 
 * Created when user triggers enrichment on cells/rows/columns.
 * Contains metadata about the batch and links to individual cell tasks.
 */
model EnrichmentJob {
  id          String    @id @default(uuid())
  tableId     String
  table       Table     @relation(fields: [tableId], references: [id], onDelete: Cascade)
  
  // Job status and tracking
  status      JobStatus @default(pending)
  totalTasks  Int       @default(0)
  doneTasks   Int       @default(0)
  failedTasks Int       @default(0)
  
  // Metadata
  createdBy   String?   // User ID if auth is implemented
  error       String?   // Error message if job failed
  
  // Timestamps
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  cellTasks   CellEnrichmentTask[]

  @@index([tableId])
  @@index([status])
  @@map("enrichment_jobs")
}

/**
 * CellEnrichmentTask - The atomic unit of enrichment
 * 
 * Each task represents one (rowId, columnId) enrichment operation.
 * Workers pick up queued tasks and execute them independently.
 */
model CellEnrichmentTask {
  id          String         @id @default(uuid())
  
  // References
  tableId     String
  table       Table          @relation(fields: [tableId], references: [id], onDelete: Cascade)
  rowId       String
  row         Row            @relation(fields: [rowId], references: [id], onDelete: Cascade)
  columnId    String
  column      Column         @relation(fields: [columnId], references: [id], onDelete: Cascade)
  jobId       String
  job         EnrichmentJob  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  // Task status
  status      CellTaskStatus @default(queued)
  
  // Result data
  result      Json?          // The enriched value with metadata
  confidence  Float?         // 0.0 – 1.0
  error       String?        // Error message if failed
  
  // Execution tracking
  attempts    Int            @default(0)
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Ensure unique task per cell per job
  @@unique([jobId, rowId, columnId])
  @@index([jobId])
  @@index([status])
  @@index([rowId])
  @@index([columnId])
  @@map("cell_enrichment_tasks")
}
