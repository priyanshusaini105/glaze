{
  "dependencies": {
    "@trigger.dev/sdk": "4.3.1",
    "ag-grid-community": "^35.0.0",
    "ag-grid-react": "^35.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "bun": ">=1.0",
    "node": ">=18"
  },
  "name": "glaze",
  "packageManager": "pnpm@9.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev": "turbo run dev --filter=api --filter=web --parallel",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "dev:workflows": "turbo run dev --filter=workflows",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}