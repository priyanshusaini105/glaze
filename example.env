# Database
DATABASE_NAME=glaze_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_PORT=5432

# API
API_PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Web
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Supabase
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# RapidAPI
RAPIDAPI_KEY=YOUR_RAPIDAPI_KEY

# Trigger.dev
TRIGGER_SECRET_KEY=YOUR_TRIGGER_SECRET_KEY

# Database URL for Trigger.dev Cloud Workers
# Using Neon (US East) for low latency from Trigger.dev cloud
# IMPORTANT: For production, use a US-based database for Trigger.dev workflows
# Supabase in India (ap-south-1) has 200-400ms latency from US-based workers
TRIGGER_DATABASE_URL="postgresql://user:password@host:port/database"

# # Database URL (Neon PostgreSQL) - Alternative for Trigger.dev
# DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require&channel_binding=require"

# Trigger.dev Direct URL (for Prisma migrations in cloud)
TRIGGER_DIRECT_URL="postgresql://user:password@host:port/database?pgbouncer=true"


# Connect to Supabase via connection pooling
DATABASE_URL="postgresql://user:password@host:port/database?pgbouncer=true"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://user:password@host:port/database"

# Redis
REDIS_URL="rediss://default:password@host:port"

GROQ_API_KEY=YOUR_GROQ_API_KEY

